{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebScraping: REQ",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--input",
                "data/full_sample-websites.csv",
                "--output",
                "data/output_req.csv",
                "--type",
                "raw_req"
            ],
            "env": {
                "NUM_THREADS": "10",
                "TIMEOUT": "5",
                "MAX_SIZE_URL": "100"
            }
        },
        {
            "name": "WebScraping: SELENIUM",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--input",
                "data/full_sample-websites.csv",
                "--output",
                "data/output_selenium.csv",
                "--type",
                "selenium"
            ],
            "env": {
                "NUM_THREADS": "10",
                "TIMEOUT": "3",
                "MAX_SIZE_URL": "100",
                "SELENIUM_DRIVE": "/Users/bogcretu/Utils/chromedriver"
            }
        },
        {
            "name": "WebScraping: Coverage",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/coverage.py",
            "console": "integratedTerminal",
            "args": [
                "data/output_req.csv",
                "data/output_selenium.csv"
            ],
            "env": {}
        },
        {
            "name": "WebScraping: Merge",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/merge.py",
            "console": "integratedTerminal",
            "args": [
                "data/output_req.csv",
                "data/sample-websites-company-names.csv",
                "data/database.csv"
            ],
            "env": {}
        },
        {
            "name": "FastAPI: Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/uvicorn",
            "args": [
                "src.app:app",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}